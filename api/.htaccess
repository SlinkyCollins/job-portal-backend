RewriteEngine On

# Specific rules for dynamic routes
RewriteCond %{HTTP_HOST} localhost
RewriteRule ^jobs/([0-9]+)$ /JobPortal/api/jobs/jobdetails.php?id=$1 [L,QSA]
RewriteCond %{HTTP_HOST} !localhost
RewriteRule ^jobs/([0-9]+)$ /api/jobs/jobdetails.php?id=$1 [L,QSA]

# General rule: Remove .php for static routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{HTTP_HOST} localhost
RewriteRule ^(.+)$ /JobPortal/api/$1.php [L,QSA]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{HTTP_HOST} !localhost
RewriteRule ^(.+)$ /api/$1.php [L,QSA]